import Layout from '../layouts/Layout.astro';
---

<Layout title="Martin Pilaszek - Developer">
    <header class="py-6">
        <h1 class="text-2xl font-light mb-5">
            HiðŸ‘‹ I'm Martin Pilaszek, a front-end developer with +2 years of experience, passionate by techonlogy, design and pretty web experiences.
        </h1>
        <h2 class="text-lg font-light text-gray-400 mb-6">
            Bellow you can see some of my personal projects and my experience, let's work together!
        </h2>
        <a href="/profile" class="underline text-gray-300">About me</a>
    </header>
    <section class="mt-16 mb-4">
        <h2 class="text-lg mb-5">Experience and projects</h2>
        <div class="md:hidden flex flex-col gap-4">
            <a class="w-full h-32 block rounded-md overflow-hidden" href="/projects/kimple">
                <img class="object-cover w-full h-full" src="/kimple.png" alt="Colors">
