            <a class="w-full h-32 block rounded-md overflow-hidden" href="/projects/rate-your-play">
                <img class="object-cover rounded-md w-full h-full" src="/ryp1.png" alt="Rate your play">
            </a>
            <a class="w-full h-32 block rounded-md overflow-hidden" href="/projects/trello-clone">
                <img class="object-cover w-full h-full" src="/trello.png" alt="Trello clone" >
            </a>
            <a class="w-full h-32 block rounded-md overflow-hidden" href="/projects/colors">
                <img class="object-cover rounded-md w-full h-full" src="/colors.png" alt="Colors">
            </a>
        </div>

        <div class="w-full hidden md:grid projects-grid gap-4 mb-4">
            <a class="div1 h-52 rounded-md overflow-hidden" href="/projects/kimple">
                <img class="object-cover w-full h-full" src="/kimple.png" alt="Colors">
            </a>
            <a class="div2 h-52 rounded-md overflow-hidden" href="/projects/rate-your-play">
                <img class="object-cover rounded-md w-full h-full" src="/ryp1.png" alt="Rate your play">
            </a>
            <a class="div3 h-36 rounded-md overflow-hidden" href="/projects/trello-clone">
                <img class="object-cover w-full h-full" src="/trello.png" alt="Trello clone" >
