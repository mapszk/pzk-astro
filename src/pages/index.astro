            <a class="div4 h-36 rounded-md ovreflow-hidden" href="/projects/colors">
                <img class="object-cover rounded-md w-full h-full" src="/colors.png" alt="Colors">
            </a>
        </div>
    </section>
</Layout>

<style scoped>
.projects-grid {
    grid-template-columns: repeat(7, 1fr);
    grid-template-rows: repeat(5, 1fr);
}

.div1 { grid-area: 1 / 1 / 4 / 5; }
.div2 { grid-area: 1 / 5 / 4 / 8; }
.div3 { grid-area: 4 / 1 / 7 / 4; }
.div4 { grid-area: 4 / 4 / 7 / 8; }
</style>