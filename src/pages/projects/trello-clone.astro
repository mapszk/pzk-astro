---
import Tag from "../../components/Tag.astro";
import Layout from "../../layouts/Layout.astro";
import Button from "../../components/Button.astro";

---

<Layout title="Martin Pilaszek - Trello clone">
    <section class="flex flex-col gap-8 mb-12">
        <div class="flex gap-2 flex-wrap">
            <Tag>Javascript</Tag>
            <Tag>Vue 3</Tag>
            <Tag>Pinia</Tag>
            <Tag>TailwindCSS</Tag>
        </div>
        <p class="text-gray-600 dark:text-gray-400">
            A simple Trello clone created with Vue, Tailwind and Pinia. Integrated drag and drop functionality and local storage to store the data.
        </p>
        <img src="/trello-1.png" alt="Trello" class="w-full h-64 object-cover rounded-md">
        <img src="/trello-2.png" alt="Trello" class="w-full h-64 object-cover rounded-md">
        <img src="/trello-3.png" alt="Trello" class="w-full h-64 object-cover rounded-md">
        <div class="flex justify-end gap-4">
            <a href="https://github.com/mapszk/trello-vue" target="_blank" rel="noreferrer noopener">
                <Button>
                    Code
                </Button>
            </a>
            <a href="https://trello-vue-ten.vercel.app" target="_blank" rel="noreferrer noopener">
                <Button>
                    Visit
                </Button>
            </a>
        </div>
    </section>
</Layout>